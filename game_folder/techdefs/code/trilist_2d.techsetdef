#include <states>



Technique( "unlit" )
{
	state = State() : "premul + nocull"
	{
		primitiveType = "trilist"
	}

	source = "Prim.hlsl"

	vs = VertexShader()
	{
		entry = "PrimVS"
	}
	ps = PixelShader()
	{
		entry = "PrimPS"
	}
}

Technique( "wireframe" )
{
	state = State() : "blend + nocull"
	{
		primitiveType = "trilist"
		wireframe      = true
	}

	source = "Prim.hlsl"

	vs = VertexShader()
	{
		entry = "PrimVS"
	}
	ps = PixelShader()
	{
		entry = "PrimPS"
	}
}
