global proc AnimEntryTimeLineSet(int $index)
{
	print_Msg("set timeline for animation index: " + $index);

	$timeLine = getTimeLineRange();
	print_Msg("current timeline: " + $timeLine[0] + ", " + $timeLine[1]);

