	string $objectsArray[];

	string $validObjects;
	string $deletedObjects;

	int $idx;
	int $num = `tokenize $objects " " $objectsArray`;

	if ( $num > 1 ) {
		for ( $idx = 0; $idx < $num; $idx++ ) {
			if( `objExists $objectsArray[$idx]` )
				$validObjects += $objectsArray[$idx] + " ";
