inline void SimpleMemoryTracking::OnAllocation(void*, size_t, size_t, size_t, size_t, const char*, const char*, const SourceInfo&, const char*)
{
	++numAllocations_;
}


// ---------------------------------------------------------------------------------------------------------------------
// ---------------------------------------------------------------------------------------------------------------------
inline void SimpleMemoryTracking::OnDeallocation(void*)
{
	--numAllocations_;
}
